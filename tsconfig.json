{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES2022"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@story": [
        "story/*"
      ]
    },
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*/*.ts",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "plugins": [
    "@typescript-eslint",
    "import"
  ]
}
