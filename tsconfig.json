{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "ES2022"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/story/*": [
        "./src/story/*"
      ]
    },
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "*/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "plugins": [
    "@typescript-eslint",
    "import"
  ]
}
